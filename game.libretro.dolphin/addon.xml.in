<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.dolphin"
		name="NGC (dolphin)"
		version="4.0.0"
		provider-name="Libretro">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
		<import addon="game.controller.nes" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
			library_@PLATFORM@="@LIBRARY_FILENAME@">
		<platforms>NGC</platforms>
		<extensions>ngc</extensions>
		<supports_vfs>true</supports_vfs>
		<supports_no_game>false</supports_no_game>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en">Dolphin v4.0.0</summary>
		<description>Source: https://github.com/libretro/dolphin</description>
		<platform>@PLATFORM@</platform>
	</extension>
</addon>
